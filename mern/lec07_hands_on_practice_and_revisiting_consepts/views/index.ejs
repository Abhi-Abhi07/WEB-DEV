<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Document</title>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="block px-5 py-2 rounded-md outline-none bg-zinc-800 w-full" type="text" name="title" placeholder="Title goes here">
                <textarea class="block px-5 py-2 mt-2 rounded-md outline-none bg-zinc-800 w-full" name="details" id="" placeholder="Write your description here"></textarea>
                <input class="mt-2 px-5 py-2 bg-blue-600 rounded-md" type="submit" name="" id="" value="Create Task">
            </form>
        </div>
        <div class="task p-10 flex gap-3 flex-wrap">
            <% if(files.length>0){ %>
                <% files.forEach((val)=>{ %>
                    <div class="task px-5 py-2 rounded-md w-72 bg-zinc-800">
                        <h1 class="text-white text-3xl tracking-tighter "><%= val %></h1>
                        <div class="mt-2 flex justify-between">
                            <a class="text-blue-500 inline-block" href=" /file/<%= val %>">Read more</a>
                            <a class="text-zinc-400 inline-block" href="/edit/<%= val %>">Edit</a>
                        </div>
                    </div>
                <% }) %>
            <% } else{ %>
            <h3 class="bg-zinc-500 px-2 py-1 rounded-md">no task here  !</h3> 
            <% } %>
